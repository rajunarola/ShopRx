
@{
    ViewData["Title"] = "Distributor Subscription History";
}

<main class="app-content">
    <div class="app-title admin_breadcrumb">
        <ul class="app-breadcrumb breadcrumb">
            <li class="breadcrumb-item"><i class="fa fa-home fa-lg"></i></li>
            <li class="breadcrumb-item"><a href="\Admin">Home</a></li>
            <li class="breadcrumb-item"><a href="javascript:;">Subscription</a></li>
            <li class="breadcrumb-item"><a href="javascript:;" mhref="DistributorSubscription">Distributor Subscription</a></li>
        </ul>
    </div>
    <div class="row pharmacies_form admin_tabel">
        <div class="col-12">
            <div class="database_title mb-2">
                <h3>Subscription History</h3>
                <button type="button" class="btn btn-outline-primary con_btn database_btn back_btn d-inline-block float-right btn-back"><i class="fa fa-arrow-left" aria-hidden="true"></i> Back</button>
            </div>
        </div>
        <div class="col-12">
            <div class="data-label">
                <label class="main-title">Distributor</label>
                <label>@ViewBag.DistributorName</label>
            </div>
            <!-- Tab panes -->
            <div class="tab-content pt-0">
                <div class="tile-body">
                    <div class="dataTables_wrapper no-footer">
                        <table class="table table-hover table-bordered dataTable no-footer table_bordered_sec" id="dtSubscriptionHistory" role="grid" aria-describedby="sampleTable_info">
                            <thead>
                            <tr role="row" class="title_datatable">
                                <th>Subscription Plan</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                            </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts{
    <script type="text/javascript">
        var subscriptionTypeId = parseInt(getLastUrlFields());
        $(document).ready(function () {
            bindCommissionHistoryList(subscriptionTypeId);
        });

        function bindCommissionHistoryList(id) {
            if ($.fn.DataTable.isDataTable("#dtSubscriptionHistory")) {
                $('#dtSubscriptionHistory').DataTable().destroy();
            }
            var table = $('#dtSubscriptionHistory')
                .DataTable({
                    "sAjaxSource": "/Admin/Subscription/GetDistributorSubscriptionHistoryList/" + id,
                    "order": [[0, ""]],
                    "columns": [
                        {
                            "data": "subscriptionTypeName",
                            "autoWidth": false,
                            "searchable": true
                        },
                        {
                            "data": "dateStart",
                            "autoWidth": false,
                            "searchable": true
                        },
                        {
                            "data": "dateEnd",
                            "autoWidth": false,
                            "searchable": true
                        }
                    ]
                });
        };

        $('#dtSubscriptionHistory').on("click", ".action", function (e) {
            const flag = $(e.currentTarget).data("flag");
            const id = $(e.currentTarget).data("id");
            switch (flag) {
                default:
                    break;
            }
        });

    </script>
}