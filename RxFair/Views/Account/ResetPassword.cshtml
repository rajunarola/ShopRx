@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset password";
}

<!-- breadcrumb-section Start -->
<section class="breadcrumb_section">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="pagi_text">
                    <h3><span>Home</span> / Reset Password</h3>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb-section End -->
<!-- login_model Start -->
<section class="login_model">
    <div class="container">
        <div class="row box_shadows">
            <div class="col-md-6 login_form">
                @if (TempData["Message"] != null)
                {
                    <div class="note">
                        <p>@TempData["Message"]</p>
                    </div>
                }
                <form asp-action="ResetPassword" id="frmResetPassword" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input asp-for="Code" type="hidden" />
                    <input asp-for="Email" type="hidden" />
                    <div class="model_title">
                        <h3>Reset your password</h3>
                        <img src="~/rxfairfrontend/images/login_icon.png" class="img-fluid pull-right" alt="">
                    </div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input value="@Model.Email" class="form-control" readonly="readonly" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                    </div>
                    <div class="form-group">
                        <button type="button" id="btnReset" class="btn btn-outline-primary con_btn">Reset<i class="fa fa-long-arrow-right" aria-hidden="true"></i></button>
                        <a href="/Account/Login" class="btn btn-outline-primary con_btn pull-right">Login <i class="fa fa-long-arrow-right" aria-hidden="true"></i></a>
                    </div>
                </form>
            </div>
            <div class="col-md-6 info_model">
                <div class="loginfo_title">
                    <h3>New Pharmacies</h3>
                </div>
                <p>
                    Hello! We’re glad that you found us. Did you know that PharmSaver
                    is the top website for independent pharmacies to purchase brand and generic pharmaceuticals?
                </p>
                <p>
                    But don’t just take our word for it.<span> Create an account for free.</span>
                </p>
                <p>
                    Once you create your account you’ll see that we s-t-r-e-t-c-h every one of your dollars, saving you thousands or hundreds of thousands per year.
                </p>
            </div>
        </div>
    </div>
</section>
<!-- login_model End -->

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script type="text/javascript">
        $("#btnReset").click(function () {
            if ($("#frmResetPassword").valid()) {
                $(this).prop("disabled", "disabled");
                $("#frmResetPassword").submit();
            }
        });
    </script>
}
